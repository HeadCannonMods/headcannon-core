<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <!-- net35 excluded: BepInEx requires .NET 4.x -->
    <TargetFrameworks>net472;net48</TargetFrameworks>
    <AssemblyName>CameraUnlock.Core.Unity.BepInEx</AssemblyName>
    <RootNamespace>CameraUnlock.Core.Unity.BepInEx</RootNamespace>
    <Version>1.0.0</Version>
    <LangVersion>7.3</LangVersion>
    <Nullable>disable</Nullable>
    <ImplicitUsings>disable</ImplicitUsings>
    <GenerateAssemblyInfo>true</GenerateAssemblyInfo>
    <OutputType>Library</OutputType>
    <Authors>CameraUnlock Mods</Authors>
    <Description>BepInEx-specific utilities for CameraUnlock head tracking mods</Description>
  </PropertyGroup>

  <!-- Reference CameraUnlock.Core and CameraUnlock.Core.Unity -->
  <ItemGroup>
    <ProjectReference Include="..\CameraUnlock.Core\CameraUnlock.Core.csproj" />
    <ProjectReference Include="..\CameraUnlock.Core.Unity\CameraUnlock.Core.Unity.csproj" />
  </ItemGroup>

  <!-- BepInEx reference - consuming projects should provide actual DLL -->
  <ItemGroup>
    <Reference Include="BepInEx">
      <HintPath>$(BepInExPath)\BepInEx.dll</HintPath>
      <Private>false</Private>
    </Reference>
  </ItemGroup>

  <!-- Unity stub references - consuming projects should provide actual DLLs -->
  <ItemGroup>
    <Reference Include="UnityEngine">
      <HintPath>$(UnityEnginePath)\UnityEngine.dll</HintPath>
      <Private>false</Private>
    </Reference>
    <Reference Include="UnityEngine.CoreModule">
      <HintPath>$(UnityEnginePath)\UnityEngine.CoreModule.dll</HintPath>
      <Private>false</Private>
    </Reference>
    <Reference Include="UnityEngine.InputLegacyModule">
      <HintPath>$(UnityEnginePath)\UnityEngine.InputLegacyModule.dll</HintPath>
      <Private>false</Private>
    </Reference>
  </ItemGroup>

  <!-- Default paths if not specified - use Valheim libs as fallback (has BepInEx + Unity) -->
  <PropertyGroup Condition="'$(BepInExPath)' == ''">
    <BepInExPath>$(MSBuildThisFileDirectory)..\..\..\..\valheim\src\ValheimHeadTracking\libs</BepInExPath>
  </PropertyGroup>
  <PropertyGroup Condition="'$(UnityEnginePath)' == ''">
    <UnityEnginePath>$(MSBuildThisFileDirectory)..\..\..\..\valheim\src\ValheimHeadTracking\libs</UnityEnginePath>
  </PropertyGroup>
</Project>
